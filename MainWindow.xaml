<Window x:Class="GA_2_DavidAbarca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GA_2_DavidAbarca"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="David Abarca - Guided Assignment 2" Canvas.Left="481" Canvas.Top="28" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Display Your Full Name - Message Box" Canvas.Left="123" Canvas.Top="28"/>
        <Label Content="First Name" Canvas.Left="123" Canvas.Top="59"/>
        <Label Content="Last Name" Canvas.Left="340" Canvas.Top="59" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFirstName" Canvas.Left="195" TextWrapping="Wrap" Canvas.Top="63" Width="120"/>
        <TextBox x:Name="txtLastName" Canvas.Left="411" TextWrapping="Wrap" Canvas.Top="63" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnFullName" Content="Display Full Name" Canvas.Left="548" Canvas.Top="59" HorizontalAlignment="Left" VerticalAlignment="Top" Width="174" Click="btnFullName_Click"/>
        <Label Content="Perform a Calculation - Label" Canvas.Left="138" Canvas.Top="126"/>
        <Label Content="Number 1" Canvas.Left="123" Canvas.Top="157"/>
        <Label Content="Number 2" Canvas.Left="354" Canvas.Top="157"/>
        <Label x:Name="lblEquation" Content="Sign" Canvas.Left="648" Canvas.Top="157"/>
        <TextBox x:Name="txtNumber1" Canvas.Left="195" TextWrapping="Wrap"  Canvas.Top="161" Width="120" TextChanged="txtNumber1_TextChanged"/>
        <TextBox x:Name="txtNumber2" Canvas.Left="434" TextWrapping="Wrap"  Canvas.Top="161" Width="120"/>
        <Button x:Name="btnAdd" Content="Add" Canvas.Left="235" Canvas.Top="197" Click="btnAdd_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="66"/>
        <Button x:Name="btnSubtract" Content="Subtract" Canvas.Left="458" Canvas.Top="197" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Click="btnSubtract_Click"/>
        <Label Content="Display a Letter from a word - Text Box" Canvas.Left="138" Canvas.Top="236"/>
        <Label Content="Enter a Word" Canvas.Left="138" Canvas.Top="267"/>
        <Label x:Name="lblNumberOfLetters" Content="Enter a number" Canvas.Left="354" Canvas.Top="267" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtWord" Canvas.Left="138" TextWrapping="Wrap"  Canvas.Top="293" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" TextChanged="txtWord_TextChanged"/>
        <TextBox x:Name="txtCharIndex" Canvas.Left="354" TextWrapping="Wrap"  Canvas.Top="293" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDisplayLetter" Canvas.Left="605" TextWrapping="Wrap"  Canvas.Top="293" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnDisplayLetter" Content="Display Letter" Canvas.Left="157" Canvas.Top="352" HorizontalAlignment="Left" VerticalAlignment="Top" Width="323" Click="btnDisplayLetter_Click_1"/>

    </Canvas>
</Window>
